<%- include('partials/header'); -%>

<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input type="text" name="postTitle" autocomplete="off" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="postContent">Post</label>
        <textarea name="postContent" autocomplete="off" rows="8" cols="75" class="form-control"></textarea>
    </div>
    
    <button class="btn btn-primary" type="submit" name="publishBtn">Publish</button>
</form>

<%- include('partials/footer'); -%>